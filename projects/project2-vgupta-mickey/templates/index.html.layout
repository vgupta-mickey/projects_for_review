{% extends "layout.html" %}
{% block title %}
   My Chat APP 
{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-sm-4">
       <h1>Users</h1>
        <ul id="users">
        </ul>
      </div>
      <div class="col-sm-8">
        <form>
           <div class="container">
            <div class="form-group">
              <label for="uname"><b>Username</b></label>
              <input id="username" type="text" placeholder="Enter Username" name="uname" required>
            </div>
            <div class="form-group">
              <label for="msg"><b>Message</b></label>
              <input id="message" type="text" placeholder="Enter Message" name="msg" required>
            </div>
            <div class="form-group">
              <button type="submit">Send</button>
            </div>
          </div>
        </form> 
      </div>
    </div>
{% endblock %}
